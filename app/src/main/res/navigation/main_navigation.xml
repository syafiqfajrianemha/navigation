<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.emha.mynavigation.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home">

        <action
            android:id="@+id/action_homeFragment_to_categoryFragment"
            app:destination="@id/categoryFragment"
            app:enterAnim="@anim/slide_in_night"
            app:exitAnim="@anim/slide_out_left"
            app:launchSingleTop="true" />

        <action
            android:id="@+id/action_homeFragment_to_profileActivity"
            app:destination="@id/profileActivity" />

    </fragment>

    <fragment
        android:id="@+id/categoryFragment"
        android:name="com.emha.mynavigation.CategoryFragment"
        android:label="fragment_category"
        tools:layout="@layout/fragment_category">
        <action
            android:id="@+id/action_categoryFragment_to_detailCategoryFragment"
            app:destination="@id/detailCategoryFragment" />
    </fragment>

    <activity
        android:id="@+id/profileActivity"
        android:name="com.emha.mynavigation.ProfileActivity"
        android:label="activity_profile"
        tools:layout="@layout/activity_profile" />

    <fragment
        android:id="@+id/detailCategoryFragment"
        android:name="com.emha.mynavigation.DetailCategoryFragment"
        android:label="fragment_detail_category"
        tools:layout="@layout/fragment_detail_category">
        <argument
            android:name="name"
            android:defaultValue="default name"
            app:argType="string" />
        <argument
            android:name="stock"
            android:defaultValue="0L"
            app:argType="long" />
        <action
            android:id="@+id/action_detailCategoryFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>

</navigation>